<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/ordernumberone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="#1"
            android:textSize="19dp"
            android:textColor="@color/colorPrimary"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ordernumberone"
            android:layout_marginLeft="20dp"
            android:text="立即送餐"
            android:textColor="@color/firsttext_color"
            android:layout_centerVertical="true"/>
        <Button
            android:layout_width="60dp"
            android:layout_height="22dp"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/cancelbutton"
            android:layout_toLeftOf="@+id/wm_num"
            android:text="打印"
            android:textSize="10sp"
            android:textColor="@color/colorPrimary"/>
        <TextView
            android:id="@+id/wm_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#2"
            android:textSize="19dp"
            android:layout_marginRight="45dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
        <ImageView
            android:id="@+id/waitdistribution_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/icon_first_logo"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <!--分割线-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/firstline_color"/>
    <include layout="@layout/content"/>


</LinearLayout>