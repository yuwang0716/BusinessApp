<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_mystore"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.liuhesan.app.businessapp.ui.personcenter.MystoreActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/mystore_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:background="?attr/colorPrimary">
        <TextView
            android:text="我的门店"
            style="@style/toolbar_title"/>
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.liuhesan.app.businessapp.widget.CircleImageView
            app:border_width="5dp"
            app:border_color="#0000"
            android:src="@mipmap/default_personal_image"
            android:id="@+id/mystore_head"
            android:layout_centerInParent="true"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/mystore_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="账户昵称"
                android:textSize="20sp"/>
                <TextView
                    android:id="@+id/mystore_qualification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  资质认证"
                    android:drawableLeft="@mipmap/mine_phone_verification"/>
                <TextView
                    android:id="@+id/mystore_certificationID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="  身份证认证"
                    android:drawableLeft="@mipmap/mine_phone_verification"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_marginTop="16dp"
        style="@style/mine_style_layout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="店名" />

        <TextView
            android:id="@+id/mystore_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="大唐夜宵"/>
    </RelativeLayout>
    <!--分割线-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/firstline_color"/>
    <RelativeLayout
    style="@style/mine_style_layout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="地址" />

    <TextView
        android:id="@+id/mystore_shop_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true" />
</RelativeLayout>
    <!--分割线-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/firstline_color"/>
    <com.liuhesan.app.businessapp.widget.RelativeLayoutForButton
        android:id="@+id/rl_mystore_shop_phone"
        style="@style/mine_style_layout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订餐电话" />

        <TextView
            android:id="@+id/mystore_shop_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" />
    </com.liuhesan.app.businessapp.widget.RelativeLayoutForButton>
   <TextView
       android:id="@+id/certificate_business"
       android:layout_marginTop="16dp"
       style="@style/mine_style_layout"
       android:text="营业资质"
       android:drawableRight="@mipmap/icon_mine_details"/>
</LinearLayout>
