        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="味点"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.liuhesan.app.businessapp.ui.personcenter.WelcomeActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:theme="@style/splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.liuhesan.app.businessapp.ui.personcenter.LoginActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.liuhesan.app.businessapp.ui.personcenter.MainActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.liuhesan.app.businessapp.ui.personcenter.RunningstateActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.liuhesan.app.businessapp.ui.personcenter.LoginBaiduActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.FloatActivity"
            android:windowSoftInputMode="stateVisible|adjustResize">
             
            <category android:name="android.intent.category.LAUNCHER" />
        </activity>
        <activity
            android:name="com.liuhesan.app.businessapp.ui.personcenter.LoginThirdActivity"
            android:configChanges="keyboardHidden|orientation"
