            android:screenOrientation="portrait" />
        <activity
            android:name="com.liuhesan.app.businessapp.ui.personcenter.BluetoothPrintActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait" />
        <activity android:name="com.liuhesan.app.businessapp.ui.personcenter.MystoreActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait"/>
        <activity android:name="com.liuhesan.app.businessapp.ui.personcenter.WelcomeGuideActivity"
